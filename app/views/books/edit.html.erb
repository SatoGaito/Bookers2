<%= render 'layouts/book_error_messages' %>

<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>

  <%= form_for(@Book) do |f| %>

    <div class="field row">
      <%= f.label :title %>
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>

    <div class="field row">
      <%= f.label :opinion %>
      <%= f.text_area :body, class: "col-xs-12" %>
    </div>

    <div class="field row">
      <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
    </div>

  <% end %>

  <%= link_to "Show", book_path(@Book) %>
  <span>|</span>
  <%= link_to "Back", books_path %>
</div>
