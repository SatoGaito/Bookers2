<%= render 'layouts/book_error_messages' %>

<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<% if @user.id == current_user.id %>
  <%= link_to "編集", edit_user_path(@user) %>
<% else %>
  <%= link_to "編集", user_path(current_user.id) %>
<% end %>

<h1>New Book</h1>
<%= form_for(@book) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :opinion %>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  <% end  %>
</table>
