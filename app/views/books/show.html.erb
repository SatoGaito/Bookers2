
<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

